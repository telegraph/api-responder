{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false
  },
  "rules": {
    "key-spacing": "off",
    "jsx-quotes": [
      2,
      "prefer-double"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "max-len": [
      2,
      120,
      2
    ],
  
    "comma-dangle": "off"
  }
}